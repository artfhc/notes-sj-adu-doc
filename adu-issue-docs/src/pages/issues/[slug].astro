---
import Layout from '../../components/Layout.astro';
import Badge from '../../components/Badge.astro';
import MediaGrid from '../../components/MediaGrid.astro';
import MediaModal from '../../components/MediaModal.astro';
import { getIssues, getMediaForIssue } from '../../lib/content';
import { roomDisplayNames } from '../../lib/schema';

export async function getStaticPaths() {
  const issues = getIssues();
  return issues.map((issue) => ({
    params: { slug: issue.slug },
    props: { issue },
  }));
}

const { issue } = Astro.props;
const media = getMediaForIssue(issue.id);
---

<Layout title={issue.title} description={issue.summary}>
  <div class="space-y-8">
    <!-- Issue Header -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-start justify-between mb-4">
        <div class="flex-1">
          <h2 class="text-3xl font-bold text-gray-900 mb-2">{issue.title}</h2>
          <p class="text-gray-600 text-lg">{issue.summary}</p>
        </div>
        <Badge status={issue.status} />
      </div>

      <!-- Affected Rooms -->
      <div class="mt-6">
        <h3 class="text-sm font-medium text-gray-700 mb-2">Affected Rooms:</h3>
        <div class="flex flex-wrap gap-2">
          {issue.rooms.map((room) => (
            <span class="inline-flex items-center px-3 py-1.5 rounded-md text-sm bg-gray-100 text-gray-700 font-medium">
              {roomDisplayNames[room]}
            </span>
          ))}
        </div>
      </div>

      <!-- Requested Remediation -->
      {issue.requested_remediation && issue.requested_remediation.length > 0 && (
        <div class="mt-6">
          <h3 class="text-sm font-medium text-gray-700 mb-2">Requested Remediation:</h3>
          <ul class="list-disc list-inside space-y-1">
            {issue.requested_remediation.map((item) => (
              <li class="text-gray-600 text-sm">{item}</li>
            ))}
          </ul>
        </div>
      )}
    </div>

    <!-- Documentation Section -->
    <div>
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-2xl font-bold text-gray-900">
          Documentation ({media.length} {media.length === 1 ? 'item' : 'items'})
        </h3>
        {media.length > 0 && (
          <a
            href="/gallery"
            class="text-sm text-blue-600 hover:text-blue-800 font-medium"
          >
            View all documentation â†’
          </a>
        )}
      </div>

      {media.length > 0 ? (
        <>
          <MediaGrid media={media} />
          <MediaModal />
        </>
      ) : (
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center">
          <svg
            class="mx-auto h-12 w-12 text-gray-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
            />
          </svg>
          <p class="mt-2 text-gray-500">No documentation items for this issue yet.</p>
        </div>
      )}
    </div>

    <!-- Back Link -->
    <div class="pt-4">
      <a
        href="/"
        class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium"
      >
        <svg
          class="w-5 h-5 mr-1"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"
          />
        </svg>
        Back to overview
      </a>
    </div>
  </div>
</Layout>
