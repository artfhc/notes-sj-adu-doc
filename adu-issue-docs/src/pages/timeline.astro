---
import Layout from '../components/Layout.astro';
import { getTimeline, getIssues } from '../lib/content';

const timeline = getTimeline();
const issues = getIssues();

// Create a map of issue IDs to issue objects for quick lookup
const issueMap = new Map(issues.map((issue) => [issue.id, issue]));
---

<Layout title="Timeline">
  <div class="space-y-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-3xl font-bold text-gray-900 mb-2">Timeline of Events</h2>
      <p class="text-gray-600">
        A chronological record of all site visits, inspections, and issue discoveries.
      </p>
    </div>

    <div class="relative">
      <!-- Timeline line -->
      <div class="absolute left-8 top-0 bottom-0 w-0.5 bg-gray-200"></div>

      <!-- Timeline entries -->
      <div class="space-y-8">
        {timeline.map((entry, index) => (
          <div class="relative pl-20">
            <!-- Timeline dot -->
            <div class="absolute left-6 top-1 w-4 h-4 rounded-full bg-blue-500 border-4 border-white"></div>

            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
              <div class="flex items-start justify-between mb-4">
                <div>
                  <h3 class="text-xl font-semibold text-gray-900">{entry.title}</h3>
                  <p class="text-sm text-gray-500 mt-1">
                    <time datetime={entry.date}>{entry.date}</time>
                  </p>
                </div>
                {index === 0 && (
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    Latest
                  </span>
                )}
              </div>

              {entry.notes && entry.notes.length > 0 && (
                <div class="mb-4">
                  <h4 class="text-sm font-medium text-gray-700 mb-2">Notes:</h4>
                  <ul class="list-disc list-inside space-y-1">
                    {entry.notes.map((note) => (
                      <li class="text-gray-600 text-sm">{note}</li>
                    ))}
                  </ul>
                </div>
              )}

              {entry.related_issues && entry.related_issues.length > 0 && (
                <div>
                  <h4 class="text-sm font-medium text-gray-700 mb-2">Related Issues:</h4>
                  <div class="flex flex-wrap gap-2">
                    {entry.related_issues.map((issueId) => {
                      const issue = issueMap.get(issueId);
                      return issue ? (
                        <a
                          href={`/issues/${issue.slug}`}
                          class="inline-flex items-center px-3 py-1 rounded-md text-sm bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors"
                        >
                          {issue.title}
                        </a>
                      ) : (
                        <span class="inline-flex items-center px-3 py-1 rounded-md text-sm bg-gray-100 text-gray-500">
                          {issueId}
                        </span>
                      );
                    })}
                  </div>
                </div>
              )}
            </div>
          </div>
        ))}
      </div>

      {timeline.length === 0 && (
        <div class="text-center py-12 text-gray-500">
          No timeline entries found.
        </div>
      )}
    </div>
  </div>
</Layout>
