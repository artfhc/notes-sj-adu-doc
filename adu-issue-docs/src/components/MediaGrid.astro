---
import type { MediaItem } from '../lib/schema';
import { roomDisplayNames } from '../lib/schema';

export interface Props {
  media: MediaItem[];
  showFilters?: boolean;
}

const { media, showFilters = false } = Astro.props;
---

<div class="space-y-6">
  {showFilters && (
    <div id="gallery-filters" class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label for="filter-type" class="block text-sm font-medium text-gray-700 mb-1">
            Media Type
          </label>
          <select
            id="filter-type"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
          >
            <option value="">All Types</option>
            <option value="photo">Photos</option>
            <option value="video">Videos</option>
          </select>
        </div>

        <div>
          <label for="filter-room" class="block text-sm font-medium text-gray-700 mb-1">
            Room
          </label>
          <select
            id="filter-room"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
          >
            <option value="">All Rooms</option>
            {Object.entries(roomDisplayNames).map(([slug, name]) => (
              <option value={slug}>{name}</option>
            ))}
          </select>
        </div>

        <div>
          <label for="filter-sort" class="block text-sm font-medium text-gray-700 mb-1">
            Sort By
          </label>
          <select
            id="filter-sort"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
          >
            <option value="date-desc">Date (Newest First)</option>
            <option value="date-asc">Date (Oldest First)</option>
          </select>
        </div>
      </div>
    </div>
  )}

  <div id="media-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {media.map((item) => (
      <div
        class="media-item bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow"
        data-type={item.type}
        data-room={item.room}
        data-date={item.date_taken}
        data-tags={item.issue_tags.join(',')}
      >
        <a
          href="#"
          class="media-link block"
          data-media-id={item.id}
          data-caption={item.caption}
          data-url={item.public_url}
          data-type={item.type}
          data-date={item.date_taken}
          data-room={roomDisplayNames[item.room]}
        >
          {item.type === 'photo' ? (
            <div class="aspect-video bg-gray-100 relative overflow-hidden">
              <img
                src={item.thumb_url || item.public_url}
                alt={item.caption}
                loading="lazy"
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
          ) : (
            <div class="aspect-video bg-gray-900 relative overflow-hidden flex items-center justify-center">
              <svg
                class="w-16 h-16 text-white opacity-75"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"
                />
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
              <span class="absolute bottom-2 right-2 bg-black bg-opacity-75 text-white text-xs px-2 py-1 rounded">
                VIDEO
              </span>
            </div>
          )}

          <div class="p-4">
            <p class="text-sm text-gray-900 line-clamp-2 mb-2">{item.caption}</p>
            <div class="flex items-center justify-between text-xs text-gray-500">
              <span>{roomDisplayNames[item.room]}</span>
              <span>{item.date_taken}</span>
            </div>
          </div>
        </a>
      </div>
    ))}
  </div>

  {media.length === 0 && (
    <div class="text-center py-12 text-gray-500">
      No media items found.
    </div>
  )}
</div>

{showFilters && (
  <script>
    // Client-side filtering logic
    const filterType = document.getElementById('filter-type') as HTMLSelectElement;
    const filterRoom = document.getElementById('filter-room') as HTMLSelectElement;
    const filterSort = document.getElementById('filter-sort') as HTMLSelectElement;
    const mediaItems = document.querySelectorAll('.media-item');

    function applyFilters() {
      const typeValue = filterType.value;
      const roomValue = filterRoom.value;
      const sortValue = filterSort.value;

      // Filter items
      const visibleItems: Element[] = [];

      mediaItems.forEach((item) => {
        const itemType = item.getAttribute('data-type');
        const itemRoom = item.getAttribute('data-room');

        const typeMatch = !typeValue || itemType === typeValue;
        const roomMatch = !roomValue || itemRoom === roomValue;

        if (typeMatch && roomMatch) {
          (item as HTMLElement).style.display = '';
          visibleItems.push(item);
        } else {
          (item as HTMLElement).style.display = 'none';
        }
      });

      // Sort visible items
      if (sortValue) {
        const grid = document.getElementById('media-grid');
        if (grid) {
          const sorted = visibleItems.sort((a, b) => {
            const dateA = a.getAttribute('data-date') || '';
            const dateB = b.getAttribute('data-date') || '';

            if (sortValue === 'date-asc') {
              return dateA.localeCompare(dateB);
            } else {
              return dateB.localeCompare(dateA);
            }
          });

          // Reorder in DOM
          sorted.forEach((item) => grid.appendChild(item));
        }
      }
    }

    filterType?.addEventListener('change', applyFilters);
    filterRoom?.addEventListener('change', applyFilters);
    filterSort?.addEventListener('change', applyFilters);
  </script>
)}
